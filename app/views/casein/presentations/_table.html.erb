<!-- Scaffolding generated by Casein v5.0.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Contents", :contents %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% presentations.each do |presentation| %>
		<tr>
			<td><%= casein_table_cell_link presentation.name, casein_presentation_path(presentation) %></td>
			<td><%= casein_table_cell_link presentation.description, casein_presentation_path(presentation) %></td>
			<td><%= casein_table_cell_link presentation.contents, casein_presentation_path(presentation) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_presentation_path(presentation), :method => :delete, :data => { :confirm => "Are you sure you want to delete this presentation?" }) %>
			</td>
		</tr>
	<% end %>
</table>